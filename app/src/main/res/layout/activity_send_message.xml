<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lenovo.safecabs.SendMessage"
    android:background="@drawable/background"
    >
    <EditText
        android:id="@+id/source"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:ems="10"
        android:hint="From"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#fff4fa3e"
        android:textColorHint="#fff4fa3e"
        android:background="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/destination"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:ems="10"
        android:hint="To"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#fff4fa3e"
        android:textColorHint="#fff4fa3e"
        android:background="#000000"
        android:layout_below="@+id/source"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />
    <EditText
        android:id="@+id/guardianNumber"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:ems="10"
        android:hint="Guardian's Number"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#fff4fa3e"
        android:textColorHint="#fff4fa3e"
        android:background="#000000"
        android:layout_below="@+id/destination"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />
    <EditText
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:ems="10"
        android:hint="Message"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#fff4fa3e"
        android:textColorHint="#fff4fa3e"
        android:background="#000000"
        android:layout_below="@+id/guardianNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/scanresult"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/message"
        android:padding="10dp"
        android:textColor="#fff4fa3e"
        android:background="#000000"
        />
    <Button
        android:id="@+id/send"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanresult"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="sendMessage"
        android:text="Send"
        android:textColor="#fff4fa3e"
        android:background="#ff040404" />

</RelativeLayout>
